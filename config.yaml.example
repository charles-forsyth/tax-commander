# Tax Commander Configuration

organization:
  township_name: "Your Municipality Name"
  collector_name: "Tax Collector Name"
  collector_title: "Tax Collector"
  mailing_address: "123 Main St"
  city_state_zip: "City, State 12345"

contact:
  email: "collector@example.com"
  phone: "(555) 555-5555"
  # Message shown on the bill about drop-off options:
  drop_box_message: "ðŸ”’ 24/7 Secure Drop Box Available at the Municipal Building"
  qr_code:
    enabled: true
    subject_template: "Tax Inquiry - Parcel {parcel_id}"
    body_template: "Hello Tax Collector,\n\nI am writing regarding Parcel {parcel_id}.\n\nPlease assist me with:\n[ ] Requesting a receipt\n[ ] Updating my mailing address\n[ ] Question about my bill\n\nMy phone number is: _________________\n\nThank you,\n{owner_name}"

financial:
  # Distribution Percentages (0.0 to 1.0)
  real_estate:
    township_share: 0.80
    county_share: 0.15
    school_share: 0.05
  per_capita:
    township_share: 0.50
    school_share: 0.50

bank_accounts:
  township:
    name: "Municipality General Fund"
    account_number: "123456789"
  county:
    name: "County Tax Account"
    account_number: "987654321"
  school_district:
    name: "School District Taxes"
    account_number: "112233445"

system:
  database_file: "tax_commander.db"
  schema_file: "schema.sql"
  backup_dir: "backups"
  bill_output_dir: "tax_bills"
  log_file: "tax_commander.log"

defaults:
  bill_issue_date: "2025-03-01"

gemini:
  api_key: "YOUR_GEMINI_API_KEY_HERE"
  model: "gemini-3-pro-preview"
